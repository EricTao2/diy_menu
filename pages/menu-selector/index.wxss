@import '/style/form.wxss';

.subtitle {
  margin-bottom: 32rpx;
  color: var(--subtext-color);
}

.loading {
  color: var(--subtext-color);
  margin-bottom: 24rpx;
}

.actions {
  margin-bottom: 24rpx;
}

.create-button {
  width: 100%;
}

.menu-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid transparent;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.08);
}

.menu-card.active {
  border-color: var(--primary-color);
}

.menu-header {
  margin-bottom: 16rpx;
}

.menu-name {
  font-size: 32rpx;
  font-weight: 600;
}

.menu-desc {
  display: block;
  margin-top: 12rpx;
  color: var(--subtext-color);
}

.menu-roles {
  margin-top: 16rpx;
}

.menu-roles-label {
  display: block;
  margin-bottom: 12rpx;
  color: var(--subtext-color);
}

.enter {
  margin-top: 24rpx;
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 80rpx 0;
}
