@import '/style/form.wxss';

.page {
  min-height: 100vh;
  height: 100vh;
  background: linear-gradient(180deg, rgba(241, 245, 249, 0.8) 0%, rgba(255, 255, 255, 0.9) 35%, #ffffff 100%);
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.page-header {
  background: linear-gradient(120deg, rgba(59, 130, 246, 0.16), rgba(59, 130, 246, 0.05));
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(15, 23, 42, 0.08);
}

.header-content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.page-body {
  margin-top: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
}

.section-card {
  background: rgba(255, 255, 255, 0.92);
  border-radius: 32rpx;
  padding: 20rpx 36rpx 32rpx;
  box-shadow: 0 16rpx 36rpx rgba(15, 23, 42, 0.06);
  border: 3px solid rgba(148, 163, 184, 0.18);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
  min-height: 0;
}


.section-heading {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 12rpx;
}

.section-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 12rpx;
}

.menu-content {
  flex: 1;
  min-height: 0;
  display: flex;
  position: relative;
  border-radius: 32rpx;
  padding: 0;
}

.menu-scroll {
  flex: 1;
  min-height: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 0 16rpx 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.menu-scroll::-webkit-scrollbar {
  width: 0 !important;
  height: 0 !important;
  display: none !important;
}

.menu-scroll__spacer {
  height: 16rpx;
}

.menu-scroll-mask {
  position: absolute;
  left: 0;
  right: 0;
  height: 72rpx;
  pointer-events: none;
  z-index: 1;
  border-radius: 28rpx;
}

.menu-scroll-mask--top {
  top: 8rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.92), rgba(255, 255, 255, 0));
}

.menu-scroll-mask--bottom {
  bottom: 8rpx;
  background: linear-gradient(0deg, rgba(255, 255, 255, 0.92), rgba(255, 255, 255, 0));
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #0f172a;
}

.section-subtitle {
  color: var(--subtext-color);
  font-size: 26rpx;
}

.user-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
  background-color: rgba(255, 255, 255, 0.86);
  border-radius: 20rpx;
  padding: 20rpx 28rpx;
  gap: 16rpx;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.6), 0 12rpx 28rpx rgba(15, 23, 42, 0.08);
}

.user-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  text-align: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f1f5f9;
  border: 3rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.user-nickname {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.user-subtitle {
  color: rgba(15, 23, 42, 0.65);
  font-size: 22rpx;
}

.user-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
  max-width: 500rpx;
  justify-content: space-between;
}

.user-action-btn {
  flex: 1;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border: 0;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
  transition: all 0.2s ease;
}

.user-action-btn::after {
  border: none;
}

.user-action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.loading {
  color: var(--subtext-color);
  margin-bottom: 24rpx;
}

.refresh {
  border-radius: 999rpx;
  padding: 0 48rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  width: 220rpx;
}

.refresh::after {
  border: none;
}

.create-button {
  border-radius: 999rpx;
  padding: 0 48rpx;
  height: 72rpx;
  font-size: 30rpx;
  width: 220rpx;
  line-height: 72rpx;
}

.create-button::after {
  border: none;
}

.menu-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320rpx, 1fr));
  gap: 20rpx;
  padding: 16rpx 12rpx 0;
}

.menu-card {
  position: relative;
  background: linear-gradient(165deg, rgba(252, 252, 252, 0.98), rgba(240, 240, 251, 0.6));
  border-radius: 26rpx;
  padding: 26rpx;
  border: 5rpx solid rgba(148, 163, 184, 0.3);
  box-shadow: 0 18rpx 36rpx rgba(15, 23, 42, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.55);
  transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 190rpx;
  z-index: 0;
}

.menu-card::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 24rpx;
  pointer-events: none;
  box-shadow: inset 0 0 0 1rpx rgba(255, 255, 255, 0.45);
}

.menu-card.active {
  border-color: rgba(59, 130, 246, 0.5);
  box-shadow: 0 20rpx 42rpx rgba(59, 130, 246, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.65);
  transform: translateY(-6rpx);
  z-index: 2;
}

.menu-header {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.menu-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #0f172a;
}

.menu-desc {
  display: block;
  color: rgba(15, 23, 42, 0.58);
  min-height: 38rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-roles {
  margin-top: auto;
  padding-top: 20rpx;
}

.menu-roles-label {
  display: block;
  margin-bottom: 14rpx;
  color: rgba(15, 23, 42, 0.52);
  font-size: 24rpx;
  font-weight: 500;
}

.enter {
  border-radius: 20rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  width: 100%;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.2);
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border: 0;
  color: #ffffff;
}

.enter::after {
  border: none;
}

.enter:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 120rpx 32rpx;
  background: linear-gradient(160deg, rgba(255, 255, 255, 0.96), rgba(241, 245, 249, 0.9));
  border-radius: 26rpx;
  border: 1px dashed rgba(148, 163, 184, 0.4);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
}

.page-footer {
  margin-top: 24rpx;
  padding-bottom: calc(env(safe-area-inset-bottom));
  display: flex;
  justify-content: center;
}

.profile-modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 48rpx;
}

.profile-modal {
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
}

.profile-modal__card {
  width: 100%;
  max-width: 640rpx;
  background: linear-gradient(165deg, rgba(255, 255, 255, 0.98), rgba(226, 232, 240, 0.9));
  border-radius: 44rpx;
  overflow: hidden;
  box-shadow: 0 28rpx 70rpx rgba(15, 23, 42, 0.24);
  border: 1px solid rgba(148, 163, 184, 0.22);
  display: flex;
  flex-direction: column;
  backdrop-filter: blur(26rpx);
}

.profile-modal__close {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 2rpx solid rgba(148, 163, 184, 0.35);
  box-shadow: 0 18rpx 40rpx rgba(15, 23, 42, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  transition: transform 0.18s ease, box-shadow 0.18s ease, background 0.18s ease;
}

.profile-modal__close-line {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 36rpx;
  height: 4rpx;
  background: rgba(30, 64, 175, 0.82);
  border-radius: 999rpx;
}

.profile-modal__close-line:first-child {
  transform: translate(-50%, -50%) rotate(45deg);
}

.profile-modal__close-line:last-child {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.profile-modal__close:active {
  transform: scale(0.92);
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 14rpx 30rpx rgba(15, 23, 42, 0.12);
}

.profile-modal__hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32rpx;
  padding: 52rpx 48rpx 44rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.25), rgba(59, 130, 246, 0.08));
}

.profile-modal__hero-text {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  flex: 1;
}

.profile-modal__tag {
  align-self: flex-start;
  padding: 8rpx 26rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  color: rgba(255, 255, 255, 0.92);
  background: rgba(59, 130, 246, 0.6);
}

.profile-modal__title {
  font-size: 38rpx;
  font-weight: 700;
  color: #0f172a;
}

.profile-modal__subtitle {
  color: rgba(15, 23, 42, 0.75);
  font-size: 26rpx;
  line-height: 1.4;
}

.profile-modal__hero-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 18rpx;
}

.profile-modal__avatar {
  width: 176rpx;
  height: 176rpx;
  border-radius: 50%;
  background: #f8fafc;
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 12rpx 28rpx rgba(59, 130, 246, 0.28);
}

.profile-modal__avatar-btn {
  font-size: 26rpx;
  padding: 14rpx 36rpx;
  height: 66rpx;
  line-height: 38rpx;
  border-radius: 999rpx;
  color: rgba(59, 130, 246, 0.95);
  border: 1px solid rgba(59, 130, 246, 0.35);
  background: rgba(255, 255, 255, 0.95);
}

.profile-modal__avatar-btn[disabled] {
  opacity: 0.7;
}

.profile-modal__body {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  padding: 40rpx 48rpx 32rpx;
}

.profile-modal__field {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.profile-modal__label {
  color: #0f172a;
  font-size: 30rpx;
  font-weight: 600;
}

.profile-modal__input {
  padding: 26rpx 32rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.25);
  border-radius: 24rpx;
  font-size: 32rpx;
  background: rgba(255, 255, 255, 0.96);
  box-shadow: inset 0 2rpx 6rpx rgba(59, 130, 246, 0.08);
}

.profile-modal__hint {
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.55);
  background: rgba(148, 163, 184, 0.18);
  border-radius: 24rpx;
  padding: 22rpx 24rpx;
}

.profile-modal__actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 48rpx 48rpx;
}

.profile-modal__save-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 98rpx;
  font-size: 32rpx;
  box-shadow: 0 20rpx 36rpx rgba(59, 130, 246, 0.3);
}

@media screen and (max-width: 500px) {
  .profile-modal__hero {
    flex-direction: column;
    align-items: stretch;
  }

  .profile-modal__hero-avatar {
    align-self: center;
  }

  .profile-modal__actions {
    padding: 0 32rpx 40rpx;
  }
}
