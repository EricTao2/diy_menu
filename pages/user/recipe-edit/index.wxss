.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

.form {
  padding: 24rpx;
}

.form-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.form-label.required::before {
  content: '* ';
  color: #ef4444;
}

.form-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 图片上传 */
.image-upload {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  background: #f9fafb;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.upload-icon {
  font-size: 72rpx;
  color: #9ca3af;
}

.upload-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 原材料列表 */
.add-ingredient-btn {
  background: #3b82f6;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 0 24rpx;
}

.add-ingredient-btn::after {
  border: none;
}

.empty-ingredients {
  text-align: center;
  padding: 60rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.ingredient-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.ingredient-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ingredient-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.ingredient-amount {
  font-size: 24rpx;
  color: #6b7280;
}

.remove-btn {
  background: #fee2e2;
  color: #ef4444;
  border: none;
  border-radius: 8rpx;
  padding: 0 16rpx;
}

.remove-btn::after {
  border: none;
}

/* 底部操作栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn::after {
  border: none;
}

.btn-save {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
}

.btn-delete {
  background: #fee2e2;
  color: #ef4444;
}
