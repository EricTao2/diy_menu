.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.search-bar {
  padding: 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.loading, .empty {
  text-align: center;
  padding: 80rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

.recipe-list {
  padding: 24rpx;
}

.recipe-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.recipe-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.recipe-content {
  font-size: 24rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.select-icon {
  font-size: 32rpx;
  color: #3b82f6;
}
