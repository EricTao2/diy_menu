.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

.content {
  padding-bottom: 24rpx;
}

.cover-image {
  width: 100%;
  height: 500rpx;
}

.info-card {
  background: #ffffff;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 16rpx;
}

.recipe-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.creator-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.creator-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.creator-name {
  font-size: 26rpx;
  color: #6b7280;
}

.section-card {
  background: #ffffff;
  padding: 32rpx;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.content-text {
  display: block;
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 原材料清单 */
.ingredients-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.ingredient-group {
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.ingredient-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.ingredient-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
}

.ingredient-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.ingredient-amounts {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-left: 76rpx;
}

.amount-item {
  font-size: 26rpx;
  color: #6b7280;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
}

.btn::after {
  border: none;
}

.btn-edit {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
}

.btn-delete {
  background: #fee2e2;
  color: #ef4444;
}
