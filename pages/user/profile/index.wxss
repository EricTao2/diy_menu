.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Tab栏样式 */
.tabs {
  display: flex;
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #e5e7eb;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  position: relative;
}

.tab-item.active {
  color: #3b82f6;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #3b82f6;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 内容区域 */
.tab-content {
  padding: 24rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.create-btn {
  height: 80rpx;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.create-btn::after {
  border: none;
}

/* Loading和空状态 */
.loading, .empty {
  text-align: center;
  padding: 80rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 菜谱卡片 */
.recipe-list {
  display: flex;
  flex-direction: column;
  gap: 26rpx;
}

.recipe-card {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.recipe-image {
  width: 100%;
  height: 320rpx;
  flex-shrink: 0;
  background: #f3f4f6;
}

.recipe-info {
  padding: 26rpx;
  display: flex;
  flex-direction: column;
  gap: 13rpx;
}

.recipe-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
}

.recipe-time {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 原材料卡片 */
.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.ingredient-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  gap: 32rpx;
  align-items: flex-start;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.ingredient-image {
  width: 156rpx;
  height: 156rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: #f3f4f6;
}

.ingredient-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-height: 156rpx;
  justify-content: space-between;
}

.ingredient-name {
  font-size: 42rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
}

.ingredient-unit {
  font-size: 28rpx;
  color: #6b7280;
}

.ingredient-remark {
  font-size: 26rpx;
  color: #9ca3af;
  margin-top: auto;
}

.ingredient-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-self: flex-start;
}

/* 操作按钮 */
.action-btn {
  min-width: 130rpx;
  height: 78rpx;
  line-height: 78rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.edit-btn {
  background: #dbeafe;
  color: #3b82f6;
}

.delete-btn {
  background: #fee2e2;
  color: #ef4444;
}

