@import '/style/form.wxss';

.page {
  height: 100vh;
  background: var(--page-bg);
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

.tabbar-container {
  height: 120rpx;
  flex-shrink: 0;
  margin-top: 16rpx;
  background-color: var(--page-bg);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color);
}

.actions {
  display: flex;
  gap: 16rpx;
}

.mark-all-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  line-height: 1;
}

.mark-all-btn::after {
  border: none;
}

.notifications-list {
  margin-bottom: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--subtext-color);
  line-height: 1.5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: var(--subtext-color);
  font-size: 28rpx;
}
