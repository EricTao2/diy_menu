@import '/style/form.wxss';

.order-meta {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.08);
  display: flex;
  gap: 20rpx;
}

.item-media {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.item-media image {
  width: 100%;
  height: 100%;
}

.item-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.item-name {
  font-size: 32rpx;
  color: var(--text-color);
  font-weight: 600;
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-quantity {
  font-size: 28rpx;
  color: var(--subtext-color);
}

.item-total {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.item-info {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12rpx;
}

.item-options {
  flex: 1;
  color: var(--subtext-color);
  line-height: 1.4;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-option {
  font-size: 24rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-unit {
  font-size: 26rpx;
  color: var(--subtext-color);
}

.item-recipe-btn {
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
  border-radius: 999rpx;
  padding: 0 24rpx;
  border: none;
  font-size: 24rpx;
}

.item-recipe-btn::after {
  border: none;
}

.item-recipe-btn--inline {
  margin-left: 12rpx;
  align-self: flex-start;
}

.handle-remark {
  margin-top: 24rpx;
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.handle-remark__label {
  font-size: 28rpx;
  font-weight: 600;
}

.handle-remark__input {
  min-height: 140rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background-color: rgba(15, 23, 42, 0.05);
}

button.secondary {
  background-color: rgba(15, 23, 42, 0.08);
  color: var(--text-color);
}

.order-total {
  margin-top: 24rpx;
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total__label {
  font-size: 30rpx;
  color: var(--subtext-color);
}

.order-total__value {
  font-size: 34rpx;
  color: var(--primary-color);
  font-weight: 600;
}
