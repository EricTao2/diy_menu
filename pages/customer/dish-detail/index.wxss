.page {
  min-height: 100vh;
  background: var(--page-bg);
  padding: 32rpx 32rpx 80rpx;
  box-sizing: border-box;
}

.loading,
.empty {
  padding: 160rpx 0;
  text-align: center;
  color: var(--subtext-color);
  font-size: 28rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}


.cover {
  width: 100%;
  height: 460rpx;
  border-radius: 28rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.06);
}

.cover image {
  width: 100%;
  height: 100%;
}

.cover__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(15, 23, 42, 0.5);
  font-size: 28rpx;
}

.info {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 32rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color);
}

.price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ef4444;
}

.desc {
  font-size: 26rpx;
  color: var(--subtext-color);
  line-height: 1.6;
  white-space: pre-wrap;
}
