@import '/style/form.wxss';

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 100rpx 0;
}

.cart-item {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, 0.06);
}

.item-header {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 600;
}

.item-options {
  margin: 12rpx 0;
  color: var(--subtext-color);
}

.item-options text {
  margin-right: 16rpx;
}

.item-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-actions input {
  width: 120rpx;
  text-align: center;
  background-color: rgba(15, 23, 42, 0.04);
  border-radius: 12rpx;
}

.item-total {
  font-weight: 600;
}

.cart-footer {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-actions {
  display: flex;
  gap: 16rpx;
}
page,
.page {
  min-height: 100vh;
}

.page {
  padding-bottom: 200rpx;
}
