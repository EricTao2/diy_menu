@import '/style/form.wxss';

.page {
  height: 100vh; /* 固定页面高度 */
  background: var(--page-bg);
  display: flex;
  flex-direction: column;
}

/* 业务区域 - 固定高度，可滚动 */
.container {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

/* tabbar区域 - 固定高度 */
.tabbar-container {
  height: 120rpx; /* 固定tabbar区域高度 */
  flex-shrink: 0;
  margin-top: 16rpx; /* 与业务区域留出空白 */
  background-color: var(--page-bg); /* 确保背景色一致 */
}
