.page {
  min-height: 100vh;
  background: var(--page-bg);
  padding-bottom: 160rpx;
}

.page--locked {
  overflow: hidden;
}

.page__inner {
  padding: 24rpx 32rpx 0;
}

.toolbar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  justify-content: space-between;
}

.icon-btn {
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.06);
  border: none;
  padding: 0 28rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}

.icon-btn::after {
  border: none;
}

.toolbar__btn {
  flex: 1;
  min-width: 0;
  text-align: center;
}

.hero-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  background: var(--card-bg);
  border-radius: 20rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 32rpx;
}

.hero-card__media {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-card__image {
  width: 100%;
  height: 100%;
}

.hero-card__placeholder {
  font-size: 36rpx;
  font-weight: 700;
  color: rgba(15, 23, 42, 0.4);
}

.hero-card__title-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hero-card__title {
  font-size: 36rpx;
  font-weight: 700;
}

.hero-card__desc {
  font-size: 26rpx;
  color: var(--subtext-color);
}

.sentinel {
  height: 1rpx;
}

.catalog-section {
  margin-bottom: 48rpx;
}

.page--pinned .catalog-section {
  margin-bottom: 0;
}

.catalog-layout {
  display: flex;
  gap: 16rpx;
}

.page--pinned .catalog-layout {
  height: 100%;
}

.page--pinned .category-column,
.page--pinned .dish-column {
  min-height: 0;
}

.category-column {
  width: 200rpx;
  background: var(--card-bg);
  border-radius: 16rpx;
  padding: 12rpx 0;
  box-shadow: 0 8rpx 18rpx rgba(15, 23, 42, 0.05);
}

.category-item {
  padding: 18rpx 24rpx;
  font-size: 28rpx;
  color: var(--subtext-color);
  border-left: 8rpx solid transparent;
}

.category-item--active {
  color: var(--primary-color);
  font-weight: 600;
  border-left-color: var(--primary-color);
  background: rgba(31, 111, 235, 0.08);
}

.dish-column {
  flex: 1;
  background: var(--card-bg);
  border-radius: 16rpx;
  padding: 12rpx 16rpx 24rpx;
  box-shadow: 0 8rpx 18rpx rgba(15, 23, 42, 0.05);
}

.dish-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dish-group__header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.dish-group__title {
  font-size: 34rpx;
  font-weight: 700;
}

.dish-group__meta {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.dish-group__empty {
  font-size: 26rpx;
  color: var(--subtext-color);
  padding: 24rpx;
}

.dish-card {
  position: relative;
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.12);
  align-items: center;
}

.dish-card__media {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dish-cover {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  object-fit: cover;
}

.dish-cover--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(226, 232, 240, 0.65), rgba(248, 250, 252, 0.85));
  font-size: 26rpx;
  color: rgba(15, 23, 42, 0.4);
}

.dish-card__content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dish-card__name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-color);
}

.dish-card__price {
  font-size: 30rpx;
  font-weight: 700;
  color: #ef4444;
}

.dish-card__actions {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}

.dish-card__add {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: none;
  background: var(--primary-color);
  color: #ffffff;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 34rpx;
  line-height: 1;
  box-shadow: 0 8rpx 18rpx rgba(31, 111, 235, 0.25);
}

.dish-card__add::after {
  border: none;
}

.floating-checkout {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx; /* 调整到tabbar上方，避免覆盖 */
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #1f6feb 0%, #3b82f6 100%);
  color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 32rpx rgba(31, 111, 235, 0.4), 0 0 0 1rpx rgba(255, 255, 255, 0.1);
  z-index: 120;
  display: flex;
  align-items: center;
  gap: 12rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  min-width: 160rpx;
}

.floating-checkout:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(31, 111, 235, 0.3);
}

.floating-checkout__icon {
  font-size: 32rpx;
  line-height: 1;
}

.floating-checkout__content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 2rpx;
}

.floating-checkout__text {
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
}

.floating-checkout__price {
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
  opacity: 0.9;
}

.floating-checkout__badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ef4444;
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: flex-end;
  z-index: 200;
}

.modal__mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
}

.modal__content {
  position: relative;
  background: #fff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 32rpx;
  width: 100%;
}

.modal__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.modal__title {
  font-size: 34rpx;
  font-weight: 600;
}

.modal__subtitle {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.modal__header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.modal__close {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: none;
  background: rgba(15, 23, 42, 0.1);
  color: var(--text-color);
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal__close::after {
  border: none;
}

.modal__options {
  margin-bottom: 24rpx;
}

.modal__quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 30rpx;
}

.modal__quantity input {
  width: 140rpx;
  height: 64rpx;
  border: 1px solid rgba(15, 23, 42, 0.1);
  border-radius: 12rpx;
  text-align: center;
  font-size: 30rpx;
}

.modal__actions {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.modal__btn {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: none;
  background: rgba(15, 23, 42, 0.08);
}

.modal__btn--primary {
  background: var(--primary-color);
  color: #fff;
}
