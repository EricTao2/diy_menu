.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--page-bg);
}

.container {
  flex: 1;
  overflow: hidden;
  padding: 12px 0;
  box-sizing: border-box;
}

.loading {
  padding: 160rpx 0;
  text-align: center;
  color: var(--subtext-color);
}

.tabbar-container {
  height: 120rpx;
  flex-shrink: 0;
  background-color: var(--page-bg);
  margin-top: 16rpx;
}

.toolbar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 0 32rpx;
}

.toolbar__btn {
  flex: 1;
  min-width: 0;
  line-height: 64rpx;
  border-radius: 999rpx;
  border: none;
  background: rgba(15, 23, 42, 0.06);
  color: var(--text-color);
  font-size: 24rpx;
}

.toolbar__btn::after {
  border: none;
}

.hero-card {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.1);
  background: var(--card-bg);
  margin: 0 32rpx 32rpx;
}

.hero-card__media {
  height: 280rpx;
  background: rgba(15, 23, 42, 0.08);
}

.hero-card__image {
  width: 100%;
  height: 100%;
}

.hero-card__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(15, 23, 42, 0.4);
  font-size: 48rpx;
  letter-spacing: 8rpx;
}

.hero-card__text {
  padding: 24rpx 28rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hero-card__title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color);
}

.hero-card__desc {
  font-size: 26rpx;
  color: var(--subtext-color);
  line-height: 1.5;
}

.category-item {
  padding: 42rpx 24rpx;
  border-radius: 0;
  background: rgba(15, 23, 42, 0.02);
  transition: all 0.2s ease;
  margin: 0;
  border-left: 6rpx solid transparent;
}

.category-item--active {
  background: #ffffff;
  box-shadow: none;
  border-left-color: rgba(59, 130, 246, 0.6);
}

.category-item--active .category-item__name {
  font-weight: 600;
}

.category-item__name {
  font-size: 26rpx;
  color: var(--text-color);
  display: block;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-groups {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.dish-group {
  padding: 32rpx 0;
  border-top: 8rpx solid rgba(15, 23, 42, 0.06);
}

.dish-group:first-child {
  padding-top: 20rpx;
  border-top: none;
}

.dish-group__header {
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx 0rpx;
}

.dish-group__title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
}

.dish-group__empty {
  padding: 28rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: var(--subtext-color);
  text-align: center;
}

.dish-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.dish-card {
  display: flex;
  gap: 24rpx;
  background: #ffffff;
  border-radius: 0;
  padding: 14rpx 14rpx;
  box-shadow: none;
  box-sizing: border-box;
  transition: all 0.2s ease;
  position: relative;
}

.dish-card__media {
  width: 220rpx;
  height: 220rpx;
  border-radius: 6rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.06);
  flex-shrink: 0;
  padding: 6rpx;
  box-sizing: border-box;
}

.dish-card__cover {
  width: 100%;
  height: 100%;
}

.dish-card__cover--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(15, 23, 42, 0.35);
  font-size: 24rpx;
}

.dish-card__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
  box-sizing: border-box;
  padding-bottom: 16rpx;
}

.dish-card__header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dish-card__name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-card__recipe {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #eff6ff;
  color: #2563eb;
  font-size: 20rpx;
  border: 1rpx solid rgba(37, 99, 235, 0.3);
  flex-shrink: 0;
}

.dish-card__price {
  font-size: 32rpx;
  color: #ea580c;
  font-weight: 600;
  order: 2;
  margin-top: auto;
  padding-top: 12rpx;
}

.dish-card__desc {
  font-size: 24rpx;
  color: var(--subtext-color);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  order: 1;
}

.dish-card__actions {
  position: absolute;
  right: 15rpx;
  bottom: 8rpx;
  display: flex;
  align-items: center;
}

.dish-card__spec-btn {
  min-width: 90rpx;
  height: 58rpx;
  padding: 0 22rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #1b82e9dc, #1b82e9dc);
  color: #ffffff;
  border: none;
  font-size: 26rpx;
  line-height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dish-card__spec-btn::after {
  border: none;
}

.dish-card__badge {
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  min-width: 26rpx;
  height: 40rpx;
  padding: 0 10rpx;
  border-radius: 999rpx;
  background: #ef4444;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.35);
}

.dish-card__quantity-controls {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 54rpx;
}

.dish-card__qty-btn {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  border: none;
  font-size: 38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1b82e9dc, #1b82e9dc);
  color: #ffffff;
}

.dish-card__qty-btn::after {
  border: none;
}

.dish-card__qty-symbol {
  display: block;
  line-height: 1;
  font-size: 48rpx;
  transform: translateY(-2rpx);
}

.dish-card__qty-btn--decrease,
.dish-card__qty-btn--increase {
  min-width: 54rpx;
}

.dish-card__qty-count {
  min-width: 48rpx;
  height: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
  line-height: 5rpx;
}

.dish-card__qty-hidden {
  visibility: hidden;
  opacity: 0;
  pointer-events: none;
}

.scroll-spacer {
  width: 100%;
  height: 20rpx;
  /* padding-bottom: env(safe-area-inset-bottom); */
  box-sizing: border-box;
  flex-shrink: 0;
}

.scroll-spacer--category {
  height: 0rpx;
}

.scroll-spacer--dishes {
  height: 0rpx;
}

.floating-checkout {
  position: fixed;
  right: 10rpx;
  bottom: 130rpx; /* Ë∞ÉÊï¥Âà∞tabbar‰∏äÊñπÔºåÈÅøÂÖçË¶ÜÁõñ */
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #3661ed 0%, #4f7af1 100%);
  color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 32rpx rgba(30, 64, 175, 0.5), 0 0 0 1rpx rgba(255, 255, 255, 0.2);
  z-index: 120;
  display: flex;
  align-items: center;
  gap: 12rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  min-width: 160rpx;
} 

.floating-checkout--hidden {
  opacity: 0;
  transform: scale(0.85);
  pointer-events: none;
}

.floating-checkout:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(31, 111, 235, 0.3);
}

.floating-checkout__icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.floating-checkout__icon::before {
  content: "üõí";
  font-size: 32rpx;
  line-height: 1;
  filter: brightness(1.8) contrast(1.5) saturate(1.4);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.4);
  opacity: 1;
  color: #ffffff;
}

.floating-checkout__content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 2rpx;
}

.floating-checkout__text {
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
}

.floating-checkout__price {
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
  opacity: 0.9;
}

.floating-checkout__badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ef4444;
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
}

.fly-dot-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 180;
}

.fly-dot {
  position: absolute;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  transform: translate3d(0, 0, 0);
  opacity: 1;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.modal__mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
}

.modal__content {
  position: relative;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 36rpx 32rpx;
  width: 86%;
  max-width: 660rpx;
  max-height: 80vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.18);
}

.modal__header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-start;
}

.modal__title {
  font-size: 34rpx;
  font-weight: 600;
}

.modal__subtitle {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.modal__close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: none;
  background: rgba(15, 23, 42, 0.08);
  color: var(--text-color);
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal__close::after {
  border: none;
}

.modal__scroll {
  flex: 1;
  margin-top: 28rpx;
  max-height: 520rpx;
}

.modal__options {
  margin-bottom: 24rpx;
}

.modal__quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 30rpx;
}

.modal__quantity input {
  width: 140rpx;
  height: 64rpx;
  border: 1px solid rgba(15, 23, 42, 0.1);
  border-radius: 12rpx;
  text-align: center;
  font-size: 30rpx;
}

.modal__actions {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.modal__btn {
  min-width: 220rpx;
  height: 72rpx;
  padding: 0 28rpx;
  border-radius: 999rpx;
  border: none;
  background: rgba(15, 23, 42, 0.08);
  font-size: 28rpx;
}

.modal__btn--primary {
  background: var(--primary-color);
  color: #fff;
}
