.page {
  padding-bottom: 140rpx;
}

.container {
  padding-bottom: 24rpx;
}

.admin-panel {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, 0.06);
}

.search-area {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 999rpx;
  background-color: rgba(15, 23, 42, 0.05);
}

.search-clear {
  min-width: 120rpx;
}

.filters {
  margin-bottom: 24rpx;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.filter-title {
  font-size: 26rpx;
  color: var(--subtext-color);
}

.sort-picker {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background-color: rgba(15, 23, 42, 0.05);
  font-size: 24rpx;
}

.tag-filter {
  display: flex;
  gap: 16rpx;
  padding-bottom: 6rpx;
}

.tag-chip {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  background-color: rgba(15, 23, 42, 0.07);
  color: var(--subtext-color);
  white-space: nowrap;
}

.tag-chip.active {
  background-color: rgba(31, 111, 235, 0.18);
  color: var(--primary-color);
}

.category-block {
  margin-bottom: 24rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 4rpx;
}

.category-title {
  font-size: 30rpx;
  font-weight: 600;
}

.collapse-action {
  font-size: 24rpx;
  color: var(--primary-color);
}

.category-body {
  margin-top: 12rpx;
}

.role-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.role-bar__label {
  font-size: 26rpx;
  color: var(--subtext-color);
  margin-right: 16rpx;
}

.admin-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.admin-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.admin-action {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  background-color: rgba(31, 111, 235, 0.12);
  color: var(--primary-color);
  font-size: 26rpx;
}

.dish-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 18rpx rgba(15, 23, 42, 0.06);
}

.dish-info {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.dish-text {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
}

.dish-desc {
  margin-top: 12rpx;
  color: var(--subtext-color);
}

.dish-price {
  font-size: 32rpx;
  font-weight: 700;
}

.dish-tags {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background-color: rgba(31, 111, 235, 0.12);
  color: var(--primary-color);
  font-size: 22rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: flex-end;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
}

.modal-content {
  position: relative;
  width: 100%;
  background: var(--card-bg);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 32rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.modal-price {
  font-weight: 600;
}

.quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.quantity-row input {
  width: 160rpx;
  text-align: center;
  background-color: rgba(15, 23, 42, 0.04);
  border-radius: 12rpx;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.modal-actions button {
  flex: 1;
}

.empty-state {
  text-align: center;
  color: var(--subtext-color);
  margin-top: 48rpx;
  font-size: 26rpx;
}
