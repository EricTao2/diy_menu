<view class="page {{themeClass}}">
  <view class="container">
    <view class="header">
      <view class="title">通知</view>
      <view class="actions" wx:if="{{notifications.length > 0}}">
        <button class="mark-all-btn" bindtap="onMarkAllRead">全部已读</button>
      </view>
    </view>

    <view class="notifications-list" wx:if="{{notifications.length > 0}}">
      <notification-panel 
        notifications="{{notifications}}" 
        bind:tap="onNotificationTap"
      />
    </view>

    <view class="empty-state" wx:else>
      <view class="empty-icon">📭</view>
      <view class="empty-text">暂无通知</view>
      <view class="empty-desc">当有新的订单或状态变更时会在这里显示</view>
    </view>

    <view class="loading" wx:if="{{loading}}">
      <text>加载中...</text>
    </view>
  </view>

  <!-- 固定tabbar区域 -->
  <view class="tabbar-container">
    <custom-tab-bar 
      active-key="customerNotifications" 
      tabs="{{customerTabs}}"
      unread-count="{{unreadCount}}"
      bind:change="onTabChange"
    />
  </view>
</view>
