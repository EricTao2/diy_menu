@import '/style/admin-page.wxss';
@import '/style/form.wxss';

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-choice-row {
  display: flex;
  gap: 12rpx;
}

.add-choice-row input {
  flex: 1;
}

.add-choice-row button {
  flex-shrink: 0;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
}

.choices-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.choice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(15, 23, 42, 0.04);
  padding: 16rpx;
  border-radius: 12rpx;
}

.choice-item.is-default {
  border: 2rpx solid var(--primary-color);
  background-color: rgba(31, 111, 235, 0.1);
}

.choice-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.choice-label {
  font-size: 26rpx;
  color: var(--text-color);
}

.default-tag {
  font-size: 22rpx;
  color: var(--primary-color);
  background-color: rgba(31, 111, 235, 0.16);
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
}

.options-card {
  gap: 20rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-card {
  background-color: rgba(15, 23, 42, 0.04);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.option-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.option-name {
  font-size: 30rpx;
  font-weight: 600;
}

.option-body {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.choice-tag {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background-color: rgba(31, 111, 235, 0.12);
  color: var(--primary-color);
}

.option-footer {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 24rpx 0;
}

.option-form-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.option-btn {
  flex: 1;
  border-radius: 999rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border: none;
}

.option-btn::after {
  border: none;
}

.option-btn--primary {
  background: var(--primary-color);
  color: #fff;
}

.option-btn--secondary {
  background: rgba(31, 111, 235, 0.08);
  color: var(--primary-color);
  border: 1rpx solid rgba(31, 111, 235, 0.16);
}
