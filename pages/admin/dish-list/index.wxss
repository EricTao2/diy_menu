@import '/style/form.wxss';

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.picker {
  padding: 20rpx;
  background-color: var(--card-bg);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.04);
}

.dish-card {
  background-color: var(--card-bg);
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.06);
}

.dish-info {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 600;
}

.dish-meta {
  display: flex;
  justify-content: space-between;
  color: var(--subtext-color);
  margin: 12rpx 0;
}

.dish-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}
