@import '/style/admin-page.wxss';
@import '/style/form.wxss';

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-color);
}

.section-desc {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.filter-card picker {
  width: 100%;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  background: rgba(15, 23, 42, 0.02);
}

.filter-value {
  font-size: 28rpx;
  color: var(--text-color);
}

.filter-hint {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.dish-list-card {
  gap: 20rpx;
}

.dish-row {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  border-radius: 18rpx;
  background: rgba(15, 23, 42, 0.02);
}

.dish-main {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.dish-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.dish-price {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.dish-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: var(--subtext-color);
  font-size: 24rpx;
}

.dish-category {
  color: var(--subtext-color);
}

.dish-status {
  padding: 4rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-on {
  background: rgba(34, 197, 94, 0.12);
  color: var(--success-color);
}

.status-off {
  background: rgba(217, 48, 37, 0.12);
  color: var(--danger-color);
}

.dish-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.pill-btn.ghost {
  background: transparent;
  border: 1rpx solid rgba(15, 23, 42, 0.12);
  color: var(--text-color);
}

.pill-btn.ghost::after {
  border: none;
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 32rpx 0;
}
