@import '/style/admin-page.wxss';

.loading {
  text-align: center;
  color: var(--subtext-color);
}

.summary-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.summary-card {
  flex: 1;
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, 0.06);
}

.summary-label {
  font-size: 26rpx;
  color: var(--subtext-color);
}

.summary-value {
  display: block;
  margin-top: 16rpx;
  font-size: 40rpx;
  font-weight: 700;
}

.card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, 0.06);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-metrics {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.status-count {
  font-size: 32rpx;
  font-weight: 600;
}

.status-percent {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.status-bar {
  height: 12rpx;
  background-color: rgba(15, 23, 42, 0.08);
  border-radius: 999rpx;
  overflow: hidden;
  margin: 12rpx 0 18rpx;
}

.status-bar__fill {
  height: 100%;
  background-color: rgba(31, 111, 235, 0.8);
}

.order-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid rgba(15, 23, 42, 0.08);
}

.order-row:last-child {
  border-bottom: none;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-no {
  font-size: 28rpx;
  font-weight: 600;
}

.order-time {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.order-extra {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.order-price {
  font-size: 28rpx;
  font-weight: 600;
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  font-size: 26rpx;
  padding: 24rpx 0;
}
