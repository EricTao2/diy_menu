@import '/style/form.wxss';

.status-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-label {
  color: var(--subtext-color);
}

.error-toast-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 23, 42, 0.24);
  z-index: 1000;
}

.error-toast {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #ffffff;
  color: var(--danger-color);
  border-radius: 20rpx;
  padding: 20rpx 28rpx;
  min-width: 480rpx;
  max-width: 640rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.16);
}

.error-toast__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: rgba(217, 48, 37, 0.1);
  color: var(--danger-color);
  font-weight: 600;
}

.error-toast__text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.5;
}

.picker {
  padding: 16rpx;
  background-color: var(--card-bg);
  border-radius: 12rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
}

.option-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
  background-color: rgba(15, 23, 42, 0.04);
  padding: 16rpx;
  border-radius: 12rpx;
}

.option-item checkbox::after {
  border: none;
}

.option-name {
  font-size: 28rpx;
  font-weight: 600;
}

.option-name .required {
  color: var(--danger-color);
  margin-left: 8rpx;
}

.option-sub {
  display: block;
  font-size: 24rpx;
  color: var(--subtext-color);
}

.form-actions {
  margin-top: 24rpx;
  margin-bottom: 60rpx;
}

button.primary,
button.danger {
  margin-top: 0;
}

.form-actions button {
  border: none;
  border-radius: 999rpx;
  padding: 0 32rpx;
  line-height: 90rpx;
}

.form-actions button.danger {
  background-color: var(--danger-color);
  color: #ffffff;
}
