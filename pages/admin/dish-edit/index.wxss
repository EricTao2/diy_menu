@import '/style/admin-page.wxss';
@import '/style/form.wxss';

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-card {
  gap: 20rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-color);
}

.section-desc {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.form-grid {
  display: flex;
  gap: 16rpx;
  flex-direction: column;
}

.form-grid .form-field {
  flex: 1;
}

.status-row {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.status-switch {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-label {
  color: var(--subtext-color);
}

.picker {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  background: rgba(15, 23, 42, 0.02);
}

.option-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  gap: 6rpx;
  align-items: center;
  padding: 10rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  background: rgba(15, 23, 42, 0.02);
}

.option-item checkbox::after {
  border: none;
}

.option-content {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  justify-content: center;
  flex: 1;
}

.option-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
  line-height: 1.2;
}

.option-choice-summary {
  font-size: 22rpx;
  color: var(--subtext-color);
  line-height: 1.4;
}

.option-sub {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 32rpx 0;
}

.page-actions {
  margin-top: 16rpx;
  margin-bottom: 100rpx;
}

.page-actions button {
  line-height: 90rpx;
  border-radius: 999rpx;
}

.page-actions button.danger {
  background-color: var(--danger-color);
  color: #ffffff;
}

.error-toast-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 23, 42, 0.24);
  z-index: 1000;
}

.error-toast {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #ffffff;
  color: var(--danger-color);
  border-radius: 20rpx;
  padding: 20rpx 28rpx;
  min-width: 480rpx;
  max-width: 640rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.16);
}

.error-toast__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: rgba(217, 48, 37, 0.1);
  color: var(--danger-color);
  font-weight: 600;
}

.error-toast__text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.5;
}

/* 菜谱关联 */
.recipe-empty {
  padding: 40rpx 0;
  text-align: center;
}

.btn-import-recipe {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
}

.btn-import-recipe::after {
  border: none;
}

.recipe-linked {
  padding: 24rpx 0;
}

.recipe-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.recipe-label {
  font-size: 26rpx;
  color: #6b7280;
}

.recipe-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.recipe-name--missing {
  color: #ef4444;
}

.recipe-actions {
  display: flex;
  gap: 16rpx;
}

.btn-recipe-action {
  background: #f3f4f6;
  color: #3b82f6;
  border: none;
  border-radius: 8rpx;
}

.btn-recipe-action::after {
  border: none;
}

.btn-recipe-action--disabled {
  color: #9ca3af;
  background: #e5e7eb;
}

.recipe-hint {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #ef4444;
  line-height: 1.4;
}

.image-upload {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.image-preview {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.image-preview image {
  width: 100%;
  height: 100%;
}

.image-preview__mask {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(15, 23, 42, 0.35);
  color: #fff;
  opacity: 0;
  transition: opacity 0.2s ease;
  font-size: 28rpx;
}

.image-preview:hover .image-preview__mask {
  opacity: 1;
}

.image-placeholder {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  background: rgba(148, 163, 184, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--subtext-color);
  font-size: 26rpx;
}

.image-actions {
  display: flex;
  gap: 16rpx;
}

.btn-image {
  border-radius: 999rpx;
}

.btn-image::after {
  border: none;
}

.btn-image--danger {
  background: rgba(248, 113, 113, 0.18);
  color: #b91c1c;
}

.image-hint {
  font-size: 24rpx;
  color: var(--subtext-color);
}
