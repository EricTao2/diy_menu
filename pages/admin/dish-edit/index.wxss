@import '/style/admin-page.wxss';
@import '/style/form.wxss';

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-card {
  gap: 20rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-color);
}

.section-desc {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.form-grid {
  display: flex;
  gap: 16rpx;
  flex-direction: column;
}

.form-grid .form-field {
  flex: 1;
}

.status-row {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.status-switch {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-label {
  color: var(--subtext-color);
}

.picker {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  background: rgba(15, 23, 42, 0.02);
}

.option-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  gap: 6rpx;
  align-items: center;
  padding: 10rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  background: rgba(15, 23, 42, 0.02);
}

.option-item checkbox::after {
  border: none;
}

.option-content {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  justify-content: center;
  flex: 1;
}

.option-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
  line-height: 1.2;
}

.option-sub {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 32rpx 0;
}

.page-actions {
  margin-top: 16rpx;
  margin-bottom: 100rpx;
}

.page-actions button {
  line-height: 90rpx;
  border-radius: 999rpx;
}

.page-actions button.danger {
  background-color: var(--danger-color);
  color: #ffffff;
}

.error-toast-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 23, 42, 0.24);
  z-index: 1000;
}

.error-toast {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #ffffff;
  color: var(--danger-color);
  border-radius: 20rpx;
  padding: 20rpx 28rpx;
  min-width: 480rpx;
  max-width: 640rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.16);
}

.error-toast__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: rgba(217, 48, 37, 0.1);
  color: var(--danger-color);
  font-weight: 600;
}

.error-toast__text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.5;
}
