@import '/style/admin-page.wxss';

/* ==================== 页面布局 ==================== */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--page-bg);
}

.container {
  flex: 1;
  overflow: hidden;
  padding: 12px 0;
}

/* ==================== 加载状态 ==================== */
.loading {
  padding: 160rpx 0;
  text-align: center;
  color: var(--subtext-color);
}

/* ==================== 功能按钮栏 ==================== */
.toolbar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 0 32rpx;
}

.toolbar__btn {
  flex: 1;
  min-width: 0;
  line-height: 64rpx;
  border-radius: 999rpx;
  border: none;
  background: rgba(15, 23, 42, 0.06);
  color: var(--text-color);
  font-size: 24rpx;
}

.toolbar__btn::after {
  border: none;
}

.toolbar__btn--primary {
  background: linear-gradient(135deg, #f97316, #fb923c);
  color: #ffffff;
}

/* ==================== 菜单信息卡片 ==================== */
.hero-card {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.1);
  background: var(--card-bg);
  margin: 0 32rpx 32rpx;
}

.hero-card__media {
  height: 280rpx;
  background: rgba(15, 23, 42, 0.08);
}

.hero-card__image {
  width: 100%;
  height: 100%;
}

.hero-card__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(15, 23, 42, 0.4);
  font-size: 48rpx;
  letter-spacing: 8rpx;
}

.hero-card__text {
  padding: 24rpx 28rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hero-card__title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color);
}

.hero-card__desc {
  font-size: 26rpx;
  color: var(--subtext-color);
  line-height: 1.5;
}

/* ==================== 状态筛选 ==================== */
.status-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 0 32rpx;
  flex-wrap: wrap;
}

.status-tab {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.06);
  color: var(--subtext-color);
  font-size: 24rpx;
}

.status-tab--active {
  background: linear-gradient(135deg, rgba(249, 115, 22, 0.18), rgba(249, 115, 22, 0.32));
  color: #c2410c;
}

.status-tab__count {
  font-weight: 600;
}

/* ==================== 分类列表 ==================== */
.category-item {
  padding: 42rpx 24rpx;
  border-radius: 0;
  background: rgba(15, 23, 42, 0.02);
  transition: all 0.2s ease;
  margin: 0;
  border-left: 6rpx solid transparent;
}

.category-item--active {
  background: #ffffff;
  box-shadow: none;
  border-left-color: rgba(59, 130, 246, 0.6);
}

.category-item--active .category-item__name {
  font-weight: 600;
}

.category-item__name {
  font-size: 26rpx;
  color: var(--text-color);
  display: block;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ==================== 菜品分组 ==================== */
.dish-groups {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.dish-group {
  padding: 32rpx 0;
  border-top: 8rpx solid rgba(15, 23, 42, 0.06);
}

.dish-group:first-child {
  padding-top: 20rpx;
  border-top: none;
}

.dish-group__header {
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx 0rpx;
  margin: 0;
}

.dish-group__title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
}

.dish-group__empty {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  color: var(--subtext-color);
  font-size: 26rpx;
  text-align: center;
}

/* ==================== 菜品列表 ==================== */
.dish-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.dish-card {
  display: flex;
  gap: 24rpx;
  background: #ffffff;
  border-radius: 0;
  padding: 14rpx 14rpx;
  box-shadow: none;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.dish-card--dragging {
  opacity: 0.6;
  transform: scale(0.98);
}

.dish-card__media {
  width: 220rpx;
  height: 220rpx;
  border-radius: 6rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.06);
  flex-shrink: 0;
  padding: 6rpx;
  box-sizing: border-box;
}

.dish-card__cover {
  width: 100%;
  height: 100%;
}

.dish-card__cover--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(15, 23, 42, 0.35);
  font-size: 24rpx;
}

.dish-card__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
  box-sizing: border-box;
  padding-bottom: 16rpx;
}

.dish-card__header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dish-card__name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-card__recipe {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #eff6ff;
  color: #2563eb;
  font-size: 20rpx;
  border: 1rpx solid rgba(37, 99, 235, 0.3);
  flex-shrink: 0;
}

.dish-card__price {
  font-size: 32rpx;
  color: #ea580c;
  font-weight: 600;
  order: 2;
  margin-top: auto;
  padding-top: 12rpx;
}

.dish-card__desc {
  font-size: 24rpx;
  color: var(--subtext-color);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  order: 1;
}

/* ==================== 操作按钮 ==================== */
.dish-card__actions {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
  flex-shrink: 0;
  padding: 4rpx 0;
  height: 100%;
}

.dish-card__icon-btn,
.dish-card__handle {
  width: 92rpx;
  height: 92rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 3rpx 10rpx rgba(15, 23, 42, 0.08);
  box-sizing: border-box;
}

.dish-card__icon-btn {
  background: linear-gradient(145deg, rgba(37, 99, 235, 0.18), rgba(37, 99, 235, 0.28));
  border: 1rpx solid rgba(37, 99, 235, 0.32);
}

.dish-card__icon-btn::after {
  border: none;
}

.dish-card__icon-btn--active {
  background: linear-gradient(145deg, rgba(37, 99, 235, 0.28), rgba(37, 99, 235, 0.38));
}

.dish-card__icon-image {
  width: 44rpx;
  height: 44rpx;
}

.dish-card__handle {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0;
  cursor: grab;
  background: rgba(15, 23, 42, 0.04);
  border: 1rpx solid rgba(148, 163, 184, 0.24);
}

.handle-bar {
  width: 44rpx;
  height: 6rpx;
  border-radius: 999rpx;
  background: rgba(71, 85, 105, 0.7);
}

/* ==================== 空状态 ==================== */
.empty {
  padding: 120rpx 0;
  text-align: center;
  color: var(--subtext-color);
  font-size: 26rpx;
}

.scroll-spacer {
  width: 100%;
  height: 20rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.scroll-spacer--category {
  height: 0rpx;
}

.scroll-spacer--dishes {
  height: 0rpx;
}

/* ==================== 固定 Tabbar ==================== */
.tabbar-container {
  height: 120rpx;
  flex-shrink: 0;
  background: var(--page-bg);
}
