@import '/style/admin-page.wxss';

.designer-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.designer-action-btn {
  flex: 1;
  min-width: 0;
  text-align: center;
}

.menu-hero {
  position: relative;
  margin: 12rpx 0 32rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
}

.menu-hero__media {
  height: 320rpx;
}

.menu-hero__image,
.menu-hero__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  object-fit: cover;
}

.menu-hero__placeholder {
  background: linear-gradient(135deg, rgba(255, 236, 179, 0.9), rgba(255, 255, 255, 0.9));
  color: #b45309;
  font-size: 72rpx;
}

.menu-hero__placeholder-icon {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 6rpx;
}

.menu-hero__info {
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  background: rgba(15, 23, 42, 0.55);
  border-radius: 12rpx;
  padding: 24rpx 28rpx;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.menu-hero__text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.menu-hero__title {
  font-size: 36rpx;
  font-weight: 700;
}

.menu-hero__desc {
  font-size: 24rpx;
  opacity: 0.85;
  line-height: 1.4;
}

.status-tabs {
  display: flex;
  gap: 16rpx;
  align-items: center;
  padding: 12rpx 0 8rpx;
}

.status-tab {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.05);
  color: var(--subtext-color);
  font-size: 26rpx;
  transition: background 0.2s ease, color 0.2s ease;
}

.status-tab.active {
  background: linear-gradient(135deg, rgba(255, 213, 119, 0.4), rgba(255, 238, 186, 0.7));
  color: #c2410c;
}

.status-count {
  font-weight: 600;
}

.designer-sentinel {
  height: 1rpx;
  width: 100%;
}

.designer-sticky-root {
  margin-top: 24rpx;
}

.page--pinned .designer-sticky-root {
  margin-top: 0;
}

.designer-layout {
  display: flex;
  gap: 24rpx;
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(6px);
  border-radius: 40rpx;
  padding: 28rpx;
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.12);
}

.page--pinned .designer-layout {
  height: 100%;
}

.page--pinned .category-column,
.page--pinned .dish-column {
  min-height: 0;
}

.page--pinned .category-scroll,
.page--pinned .dish-scroll {
  height: 100%;
}

.category-column {
  flex: 0 0 200rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-height: 0;
}

.category-header {
  display: none;
}

.category-scroll {
  flex: 1;
  min-height: 0;
  padding-right: 8rpx;
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-radius: 999rpx;
  background: #ffffff;
  color: var(--text-color);
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.08);
  transition: box-shadow 0.2s ease, filter 0.2s ease;
  margin-bottom: 16rpx;
}

.category-item:last-child {
  margin-bottom: 0;
}

.category-item:active {
  filter: brightness(0.98);
}

.category-item.active {
  filter: brightness(1.08);
  box-shadow: 0 12rpx 30rpx rgba(15, 23, 42, 0.18);
}

.category-item.dragging {
  opacity: 0.85;
  filter: brightness(0.95);
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.18);
}

.category-name {
  font-size: 28rpx;
  font-weight: 600;
  max-width: 160rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.category-handle {
  width: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: stretch;
  justify-content: center;
  align-self: center;
}

.category-handle__bar {
  height: 4rpx;
  border-radius: 999rpx;
  background: rgba(71, 85, 105, 0.55);
}

.category-item.active .category-handle__bar {
  background: rgba(71, 85, 105, 0.8);
}

.dish-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.dish-scroll {
  flex: 1;
  min-height: 0;
}

.category-scroll,
.dish-scroll {
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.category-scroll .wx-scroll-view,
.dish-scroll .wx-scroll-view {
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.category-scroll .wx-scroll-view::-webkit-scrollbar,
.dish-scroll .wx-scroll-view::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: none;
}

.dish-groups {
  display: flex;
  flex-direction: column;
  gap: 36rpx;
  padding-bottom: 48rpx;
}

.dish-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dish-group__header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 12rpx;
}

.dish-group__title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-color);
}

.dish-group__count {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.dish-group__empty {
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  background: rgba(148, 163, 184, 0.18);
  color: rgba(71, 85, 105, 0.85);
  font-size: 24rpx;
}

.dish-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dish-card {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.12);
  color: var(--text-color);
}

.dish-card.dragging {
  opacity: 0.9;
  box-shadow: 0 16rpx 36rpx rgba(15, 23, 42, 0.24);
}

.dish-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background: rgba(15, 23, 42, 0.06);
  object-fit: cover;
  flex-shrink: 0;
}

.dish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding-right: 12rpx;
}

.dish-header {
  display: flex;
  align-items: center;
  gap: 6rpx;
  justify-content: flex-start;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-color);
}

.dish-price {
  font-size: 30rpx;
  font-weight: 700;
  color: #ef4444;
}

.dish-desc {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.dish-stats {
  display: flex;
  gap: 6rpx;
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.5);
}

.dish-actions {
  margin-left: auto;
  display: flex;
  align-items: stretch;
  height: 100%;
}

.dish-actions__column {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  width: 72rpx;
  height: 100%;
}

.dish-handle-button {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(241, 245, 249, 0.78);
  border: 2rpx dashed rgba(148, 163, 184, 0.6);
}

.dish-handle-icon {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 34rpx;
}

.dish-handle__bar {
  height: 5rpx;
  border-radius: 999rpx;
  background: rgba(10, 10, 10, 0.55);
}

.icon-button {
  border: none;
  background: #ffffff;
  color: #4b5563;
  width: 72rpx;
  min-width: 72rpx;
  max-width: 72rpx;
  height: 72rpx;
  min-height: 72rpx;
  max-height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  position: relative;
  box-shadow: 0 3rpx 10rpx rgba(15, 23, 42, 0.08);
  border: 2rpx solid rgba(107, 114, 128, 0.3);
  box-sizing: border-box;
  flex-shrink: 0;
}

.icon-button::after {
  border: none;
}

.icon-button--active {
  opacity: 0.85;
  transform: scale(0.96);
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
}

.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.empty {
  text-align: center;
  padding: 160rpx 0;
  color: var(--subtext-color);
}
.page-inner.with-tabbar {
  padding-bottom: 180rpx;
}

.page--pinned .page-inner.with-tabbar {
  padding-bottom: 180rpx;
}
