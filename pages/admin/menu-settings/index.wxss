@import '/style/admin-page.wxss';
@import '/style/form.wxss';

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-card {
  gap: 24rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.section-desc {
  font-size: 22rpx;
  color: var(--subtext-color);
}

.category-card {
  gap: 32rpx;
}

.category-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  border-radius: 18rpx;
  overflow: hidden;
}

.category-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: rgba(15, 23, 42, 0.02);
  border-bottom: 1rpx solid rgba(15, 23, 42, 0.08);
}

.category-row:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
}

.category-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.category-actions .pill-btn {
  font-size: 20rpx;
  padding: 0 20rpx;
  line-height: 48rpx;
}

.category-actions button[disabled] {
  opacity: 0.4;
}

.empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 24rpx 0;
}

.pill-btn.ghost {
  background: transparent;
  border: 1rpx solid rgba(15, 23, 42, 0.16);
  color: var(--text-color);
}

.pill-btn.ghost::after {
  border: none;
}

.bottom-actions {
  margin-top: 32rpx;
}

.bottom-actions button {
  line-height: 96rpx;
}
