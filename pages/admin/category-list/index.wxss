@import '/style/admin-page.wxss';
@import '/style/form.wxss';

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-card {
  gap: 20rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.section-desc {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.inline-form {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.inline-input {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  background: #ffffff;
}

.inline-form button {
  flex-shrink: 0;
  padding: 0 36rpx;
  line-height: 88rpx;
}

.list-card {
  gap: 20rpx;
}

.category-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  border-radius: 18rpx;
  background: rgba(15, 23, 42, 0.02);
}

.category-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
}

.tag {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(31, 111, 235, 0.12);
  color: var(--primary-color);
  font-size: 22rpx;
}

.category-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.category-actions button[disabled] {
  opacity: 0.35;
}

.pill-btn.ghost {
  background: transparent;
  border: 1rpx solid rgba(15, 23, 42, 0.12);
  color: var(--text-color);
}

.pill-btn.ghost::after {
  border: none;
}

.loading,
.empty {
  text-align: center;
  color: var(--subtext-color);
}

.loading {
  padding: 40rpx 0;
}

.empty {
  padding: 32rpx 0;
}
