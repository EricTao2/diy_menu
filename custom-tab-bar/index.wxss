.bottom-tabs {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-top: 1rpx solid rgba(15, 23, 42, 0.08);
  display: flex;
  box-shadow: 0 -8rpx 32rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(20rpx);
}

.bottom-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 8rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 12rpx;
  margin: 6rpx 4rpx;
  overflow: hidden;
}

.bottom-tab.active {
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  box-shadow: 0 4rpx 16rpx rgba(15, 23, 42, 0.15);
  border: 1rpx solid rgba(15, 23, 42, 0.1);
}

.tab-icon {
  font-size: 38rpx;
  margin-bottom: 4rpx;
  transition: all 0.3s ease;
  opacity: 0.6;
  filter: brightness(1.2) contrast(1.3) saturate(1.2);
  text-shadow: 0 0 2rpx rgba(0, 0, 0, 0.3);
  font-weight: bold;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-tab.active .tab-icon {
  opacity: 1;
  transform: scale(1.05);
  filter: brightness(1.4) contrast(1.5) saturate(1.3);
  text-shadow: 0 0 3rpx rgba(0, 0, 0, 0.4);
  font-weight: bold;
}

.tab-label {
  font-size: 20rpx;
  color: #64748b;
  text-align: center;
  font-weight: 500;
  transition: all 0.3s ease;
}

.bottom-tab.active .tab-label {
  color: #1e293b;
  font-weight: 600;
}

.tab-badge {
  position: absolute;
  top: 4rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #ff4757 0%, #ff3742 100%);
  color: white;
  border-radius: 50%;
  min-width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
  padding: 0 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
  border: 2rpx solid #ffffff;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}
