<view class="bottom-tabs">
  <block wx:for="{{tabs}}" wx:key="key" wx:for-item="tab">
    <view
      class="bottom-tab {{tab.key === activeKey ? 'active' : ''}}"
      data-key="{{tab.key}}"
      bindtap="onSelect"
    >
      <view class="tab-icon">
        <text wx:if="{{tab.key === 'customerNotifications'}}">🔔</text>
        <text wx:elif="{{tab.key === 'customerMenu'}}">🍽️</text>
        <text wx:elif="{{tab.key === 'customerCart'}}">🛒</text>
        <text wx:elif="{{tab.key === 'customerOrders'}}">📋</text>
        <text wx:elif="{{tab.key === 'menuDesigner'}}">✏️</text>
        <text wx:elif="{{tab.key === 'menuSettings'}}">⚙️</text>
        <text wx:elif="{{tab.key === 'optionLibrary'}}">📚</text>
        <text wx:elif="{{tab.key === 'orderOverview'}}">📊</text>
        <text wx:else>📄</text>
      </view>
      <view class="tab-label">{{tab.label}}</view>
      <view class="tab-badge" wx:if="{{tab.key === 'customerNotifications' && unreadCount > 0}}">
        {{unreadCount}}
      </view>
    </view>
  </block>
</view>
