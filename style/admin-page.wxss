.page {
  min-height: 100vh;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--page-bg);
  box-sizing: border-box;
}

.page-content {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 0;
}

.page-inner {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  box-sizing: border-box;
  gap: 24rpx;
}

.page-inner.with-tabbar {
  padding-bottom: 24rpx;
}

/* tabbar区域 - 固定在底部 */
.tabbar-container {
  height: 120rpx;
  flex-shrink: 0;
  background-color: var(--page-bg);
}

.loading {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--subtext-color);
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
}

.top-actions {
  display: flex;
  gap: 16rpx;
}

.icon-btn {
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.06);
  border: none;
  padding: 0 28rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}

.icon-btn.primary {
  background: var(--primary-color);
  color: #fff;
}

.icon-btn::after {
  border: none;
}

button {
  font-size: 24rpx;
}

.pill-btn {
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.08);
  border: none;
  font-size: 22rpx;
  padding: 0 28rpx;
  line-height: 56rpx;
}

.pill-btn::after {
  border: none;
}

.page-enter {
  animation: page-enter 200ms ease-out forwards;
}

.page-leave-forward {
  animation: page-leave-forward 160ms ease-in forwards;
}

.page-leave-back {
  animation: page-leave-back 160ms ease-in forwards;
}

@keyframes page-enter {
  from {
    opacity: 0;
    transform: translateX(24rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes page-leave-forward {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(-32rpx);
  }
}

@keyframes page-leave-back {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(32rpx);
  }
}
