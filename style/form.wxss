.form-field {
  margin-bottom: 24rpx;
}

.form-field label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  color: var(--subtext-color);
}

.form-field input,
.form-field textarea {
  width: 100%;
  border: 1rpx solid rgba(31, 41, 55, 0.1);
  border-radius: 12rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.form-field input {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
}

.form-field textarea {
  min-height: 160rpx;
  padding: 16rpx 20rpx;
}

.form-actions {
  display: flex;
  gap: 16rpx;
}

.form-actions button {
  flex: 1;
}
