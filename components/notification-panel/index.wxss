.notification-panel {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.08);
}

.notification-item {
  border-bottom: 1rpx solid rgba(15, 23, 42, 0.06);
  padding: 16rpx 0;
}

.notification-item:last-child {
  border-bottom: none;
}

.notification-title {
  font-size: 28rpx;
  font-weight: 600;
}

.notification-message {
  display: block;
  margin-top: 8rpx;
  color: var(--subtext-color);
}

.notification-time {
  display: block;
  font-size: 22rpx;
  margin-top: 8rpx;
  color: var(--subtext-color);
}

.notification-empty {
  text-align: center;
  color: var(--subtext-color);
}
