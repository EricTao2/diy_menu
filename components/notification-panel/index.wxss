.notification-panel {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.08);
}

.notification-item {
  border-bottom: 1rpx solid rgba(15, 23, 42, 0.06);
  padding: 20rpx 0;
  transition: all 0.2s ease;
}

.notification-item:last-child {
  border-bottom: none;
}

.notification-item.unread {
  background-color: var(--primary-color-light);
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  margin: 8rpx -8rpx;
}

.notification-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.notification-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.notification-content {
  flex: 1;
  min-width: 0;
}

.notification-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 4rpx;
}

.notification-time {
  font-size: 22rpx;
  color: var(--subtext-color);
}

.notification-status {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
}

.notification-message {
  margin-top: 12rpx;
  padding-left: 48rpx;
  font-size: 24rpx;
  color: var(--subtext-color);
  line-height: 1.4;
}

.notification-empty {
  text-align: center;
  color: var(--subtext-color);
  padding: 40rpx 0;
}
