.role-switcher {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.role-chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background-color: rgba(31, 111, 235, 0.12);
  color: var(--primary-color);
  font-size: 26rpx;
}

.role-chip.active {
  background-color: var(--primary-color);
  color: #ffffff;
}
