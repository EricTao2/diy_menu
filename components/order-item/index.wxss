.order-card {
  background-color: var(--card-bg);
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 30rpx;
  font-weight: 600;
}

.order-time {
  display: block;
  color: var(--subtext-color);
  margin-top: 8rpx;
}

.order-item-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.item-name {
  font-size: 28rpx;
}

.item-price {
  font-weight: 600;
}

.item-options {
  color: var(--subtext-color);
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.option-text {
  display: inline-block;
  margin-right: 12rpx;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.order-total {
  font-size: 32rpx;
  font-weight: 700;
}

.order-actions {
  display: flex;
  gap: 12rpx;
}

.order-actions button {
  font-size: 24rpx;
  padding: 0 24rpx;
  line-height: 64rpx;
}

.order-actions button.secondary {
  background-color: rgba(31, 111, 235, 0.1);
  color: var(--primary-color);
}

.order-actions button.primary {
  background-color: var(--primary-color);
  color: #ffffff;
}
